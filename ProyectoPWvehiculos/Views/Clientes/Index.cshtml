@using ProyectoPWvehiculos.Models.Entities
@model List<Cliente>

<h2>Lista de Clientes</h2>

<a asp-action="Create" class="btn btn-primary">Agregar Cliente</a>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Cédula</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nombre</td>
                <td>@cliente.Cedula</td>
                <td>@cliente.Telefono</td>
                <td>@cliente.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cliente.ClienteId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@cliente.ClienteId">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@cliente.ClienteId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    ViewData["Title"] = "Registrarse";
}

<div class="container mt-5" style="max-width: 400px;">
    <h2 class="text-center">Crea tu cuenta</h2>
    <p class="text-center">Regístrate para comenzar</p>

    <form method="post" asp-action="Register" asp-controller="Account">
        <div class="form-group mb-3">
            <label>Nombre completo</label>
            <input type="text" class="form-control" name="FullName" required />
        </div>

        <div class="form-group mb-3">
            <label>Correo electrónico</label>
            <input type="email" class="form-control" name="Email" required />
        </div>

        <div class="form-group mb-3">
            <label>Contraseña</label>
            <input type="password" class="form-control" name="Password" required />
        </div>

        <div class="form-group mb-3">
            <label>Confirmar contraseña</label>
            <input type="password" class="form-control" name="ConfirmPassword" required />
        </div>

        <div class="d-grid mb-3">
            <button type="submit" class="btn btn-success">Registrarse</button>
        </div>
    </form>

    <div class="text-center mb-3">
        <span>¿Ya tienes cuenta?</span>
        <a href="/Account/Login">Inicia sesión</a>
    </div>

    <hr />

    <div class="d-grid">
        <a class="btn btn-outline-danger" href="/Account/ExternalLogin?provider=Google">
            <img src="https://developers.google.com/identity/images/g-logo.png" width="20" style="margin-right: 8px;" />
            Registrarse con Google
        </a>
    </div>
</div>

@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- HERO SECTION -->
<section class="hero-section d-flex align-items-center justify-content-center text-center text-white position-relative">
    <!-- Imagen de fondo con opacidad y animación -->
    <div class="hero-bg position-absolute top-0 start-0 w-100 h-100"></div>

    <!-- Contenido -->
    <div class="container position-relative z-1 animate__animated animate__fadeInDown">
        <h1 class="display-4 fw-bold">Renta tu vehículo ideal con Anda</h1>
        <h2 class="lead">Reserva rápido, seguro y sin complicaciones desde cualquier lugar.</h2>
        <a href="#reservar" class="btn btn-primary btn-lg mt-3 shadow animate__animated animate__pulse animate__infinite">
            <i class="fas fa-calendar-check me-2"></i> Reserva ahora
        </a>
    </div>
</section>

<!-- SECCIÓN INFORMATIVA -->
<section class="py-5 bg-light text-center">
    <div class="container">
        <h2 class="mb-4">¿Por qué elegirnos?</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <i class="fas fa-car fa-3x mb-3 text-primary"></i>
                <h5>Gran variedad</h5>
                <p>Encuentra el carro que necesitas: económico, SUV, camioneta o más.</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="fas fa-bolt fa-3x mb-3 text-primary"></i>
                <h5>Reserva en minutos</h5>
                <p>Simple, rápido y 100% digital. Renta desde cualquier dispositivo.</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="fas fa-thumbs-up fa-3x mb-3 text-primary"></i>
                <h5>Confiable y seguro</h5>
                <p>Servicio garantizado con atención al cliente 24/7.</p>
            </div>
        </div>
    </div>
</section>
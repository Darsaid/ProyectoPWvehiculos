@model ProyectoPWvehiculos.Models.Vehiculo

@{
    ViewData["Title"] = "Crear Vehículo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="background-blur-overlay"></div> <!-- Fondo desenfocado -->

<div class="container mt-5 animate__animated animate__fadeIn">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 p-4 bg-light">
                <div class="text-center mb-4">
                    <i class="bi bi-car-front-fill fs-1 text-primary"></i>
                    <h2 class="mt-2">Registrar Vehículo</h2>
                    <p class="text-muted">Ingresa la información completa del vehículo</p>
                </div>

                @if (TempData["Mensaje"] != null)
                {
                    <div class="alert alert-success text-center animate__animated animate__bounceIn">
                        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Mensaje"]
                    </div>
                }

                <form asp-action="Crear" method="post" class="needs-validation" novalidate>
                    <partial name="_FormularioVehiculoPartial" model="Model" />

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-success px-5 rounded-pill">
                            <i class="bi bi-save2 me-2"></i>Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}